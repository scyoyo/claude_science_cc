{
  "name": "virtual-lab-local",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd ../backend && ./venv/bin/uvicorn app.main:app --reload",
    "dev:frontend": "cd ../frontend && NODE_OPTIONS=--max-old-space-size=512 npm run dev",
    "test": "cd ../backend && ./venv/bin/pytest tests/ -v",
    "build": "cd ../frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
